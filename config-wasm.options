config.cxx = em++
config.c = emcc

config.cxx.std=20

config.cc.poptions = -pthread -DBOOST_HAS_PTHREADS
config.cc.loptions = --bind -pthread -s USE_SDL=2 -s PTHREAD_POOL_SIZE_STRICT=0 -s PROXY_TO_PTHREAD -s EXIT_RUNTIME=1 -s ALLOW_MEMORY_GROWTH=1 -Wno-pthreads-mem-growth -s ASSERTIONS=0

config.test.runner = node --experimental-wasm-threads

config.install.root = install/wasm/

-- "?sys:sdl2/*"
